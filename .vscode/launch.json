{
    "version": "0.2.0",
     "configurations": [
         {
             "name": "Launch C++ (Windows)",
             "type": "cppvsdbg",
             "request": "launch",
             "program": "node",
             "args": [ "${workspaceFolder}/dev/windows.js" ],
             "stopAtEntry": false,
             "cwd": "${workspaceFolder}",
             "environment": [],
             "preLaunchTask": "build",
             "externalConsole": false
         },
         {
            "name": "Launch C++ (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/node",
            "args": [ "${workspaceFolder}/dev/linux.js" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "preLaunchTask": "buildlinux",
            "externalConsole": false,
            "MIMode": "gdb",
        },          
        {
            "name": "Launch javascript (linux)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "args": [ "${workspaceFolder}/dev/addonTest.js" ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "debug-linux"
            ],
            "port": 9229
        },
        {
            "name": "Launch javascript (windows)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "args": [ "${workspaceFolder}/dev/addonTest.js" ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "debug-windows"
            ],
            "port": 9229
        }
    ]
 }